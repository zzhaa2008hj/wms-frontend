{
  "compilerOptions": {
    "module": "amd",
    "target": "es6",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["es7", "dom", "es2015.promise"],
    "baseUrl": "./",
    "pretty": true,
    "paths": {
      "@app/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}